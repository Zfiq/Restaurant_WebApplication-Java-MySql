        <servlet-name>Reservation_Delete</servlet-name>
        <url-pattern>/Reservation_Delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Reservation_Update</servlet-name>
        <url-pattern>/Reservation_Update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Menu_Controller</servlet-name>
        <url-pattern>/Menu_Controller</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30 
        </session-timeout>
    </session-config>
